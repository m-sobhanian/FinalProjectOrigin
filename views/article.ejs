<!DOCTYPE html>
<html>
  <head>
    <title>Home</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top navGuestPage">
      <a class="navbar-brand" href="/">Home</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/panel/login">Sign In</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/panel/register">Sign Up</a>
          </li>
          
        </ul>
      </div>  
    </nav>
    <div class="container-fluid">
      <div class="row content my-4 justify-content-center">
         
            <div class="col-xs-12 col-sm-12 col-md-6">
                <div class="card text-center">
                    <img class="card-img-top imgArticle" src="<%=pic%>" alt="Card image" style="width:100%"> 
                   <div class="card-body">
                     <h4 class="card-title"><%=author%></h4>
                     <h2><%=name%></h2>
                     <p class="card-text"><%=shortTxt%></p>
                     <p class="card-text"><%=longTxt%></p>
                     <p class="card-text">Date: <%=date%></p>
                   </div>
                   <div class="card-footer"><a href="/" class="linkback">Back</a></div>
                 </div>
                 <%comments.forEach(function(comment){%>

                 <div class="media border p-3 bg-light">
                    <img src="../uploads/avatar/<%=comment.author.pic%>" alt="John Doe" class="mr-3 mt-3 rounded-circle" style="width:60px;">
                  <div class="media-body">
                    <h4><%=comment.name%></h4>
                    <p><%=comment.content%></p>
                  </div>
                </div>
                <%})%>

            </div>
            
           
      </div>
     
    </div> 
  </body>
</html>
